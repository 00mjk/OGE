<Window x:Class="OGE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OGE"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!--<Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>-->
        <Menu>
            <MenuItem Header="File">
                <MenuItem Header="Open" Name="MenuOpenButton"/>
                <MenuItem Header="Save" Name="MenuSaveButton"/>
                <MenuItem Header="Save as" Name="MenuSaveAsButton"/>
                <Separator/>
                <MenuItem Header="Import from xml" Name="MenuImportFromXmlButton"/>
                <MenuItem Header="Export to xml" Name="MenuExportToXmlButton"/>
                <Separator/>
                <MenuItem Header="Exit" Click="MenuExit_OnClick"/>
            </MenuItem>
            <MenuItem Header="View"/>
            <MenuItem Header="Help"/>
        </Menu>
    </Grid>
</Window>
